# Brewfile - Essential tools for a fresh macOS setup
# Run: brew bundle
#
# NOTE: git, zsh, curl, vim are already included in macOS with Xcode Command Line Tools

# Core CLI tools
brew 'tmux'          # Terminal multiplexer
brew 'wget'          # File downloader (complement to curl)

# Modern CLI improvements (safe, actively maintained)
brew 'bat'           # Better cat with syntax highlighting (rust-based)
brew 'ripgrep'       # Better grep (rust-based)
brew 'fzf'           # Fuzzy finder (go-based)

# Development essentials
brew 'gh'            # Official GitHub CLI (maintained by GitHub)
brew 'jq'            # JSON processor

# GUI Applications
cask 'iterm2'                # Better terminal
cask 'visual-studio-code'    # Code editor
cask 'docker'                # Containerization
